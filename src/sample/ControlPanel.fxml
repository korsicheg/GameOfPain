<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="240.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControlController">
        <children>
    <Button fx:id="rollButton" minWidth="100.0" mnemonicParsing="false" onMouseClicked="#roll" prefWidth="100.0" text="Dice roll!">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font></Button>
    <Label fx:id="player1Control" style="-fx-text-fill: blue;" text="Player1">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets right="220.0" top="-35.0" />
         </VBox.margin></Label>
    <Label fx:id="player2Control" layoutX="181.0" layoutY="828.0" style="-fx-text-fill: red;" text="Player2">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="220.0" top="-35.0" />
         </VBox.margin></Label>
    <Label fx:id="fuel1" text="FuelPlayer1">
         <VBox.margin>
            <Insets right="220.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font></Label>
    <Label fx:id="fuel2" layoutX="113.0" layoutY="848.0" text="FuelPlayer2">
         <VBox.margin>
            <Insets left="220.0" top="-27.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font></Label>
    <ProgressBar fx:id="fuelBar1" prefWidth="120.0" progress="0.0" style="-fx-accent: red;">
         <VBox.margin>
            <Insets right="220.0" />
         </VBox.margin></ProgressBar>
    <ProgressBar fx:id="fuelBar2" layoutX="659.0" layoutY="870.0" prefWidth="120.0" progress="0.0" style="-fx-accent: blue;">
         <VBox.margin>
            <Insets left="220.0" top="-18.0" />
         </VBox.margin></ProgressBar>
      <Label fx:id="whoRolled" layoutX="375.0" layoutY="79.0" text="... rolled ...">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <ImageView fx:id="diceImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
      </ImageView>
</children>
        </VBox>
