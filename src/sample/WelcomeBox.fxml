            <Insets />
         </VBox.margin>
         <font>
            <Font size="10.0" />
         </font>
      </Text>
      <Text layoutX="33.0" layoutY="124.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SELECT DIFFICULTY">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="25.0" />
         </VBox.margin>
      </Text>
      <ComboBox fx:id="difficulty" layoutX="310.0" layoutY="106.0" prefWidth="150.0" />
      <ImageView fx:id="difficultyImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </ImageView>
      <Button fx:id="playButton" mnemonicParsing="false" onAction="#play" text="PLAY THE GAME">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
